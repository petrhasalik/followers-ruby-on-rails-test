<h1>Users list</h1>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Followers</th>
      <th>Following</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= link_to u.name, user_path(u) %></td>
        <td><%= u.followers.count %></td>
        <td><%= u.followings.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>