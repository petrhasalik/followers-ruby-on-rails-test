<div class="col-md-4">
  <h2>Followers <span class="follow-count pull-right"><%= followers.count %></span></h2>

  <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% followers.each do |f| %>
        <tr>
          <td><%= link_to f.name, user_path(f) %></td>
          <td class="center">
            <% unless user.follows?(f) %>
              <%= link_to follow_user_path(id: user.id, follow: f.id), method: :post, title: 'Follow!' do %>
                <span class="glyphicon glyphicon-plus"></span><span class="glyphicon glyphicon-user"></span>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>